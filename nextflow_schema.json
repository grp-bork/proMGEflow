{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/grp-bork/reCOGnise/main/nextflow_schema.json",
  "title": "proMGEflow nextflow schema",
  "description": "proMGEflow discovers and annotates recombinase-based mobile genetic islands in microbial genomes.",
  "type": "object",
  "definitions": {
    "required": {
      "title": "Input/Output Parameters",
      "type": "object",
      "description": "",
      "default": "",
      "properties": {
        "input_dir": {
          "type": "string",
          "format": "directory-path",
          "description": "Directory path to genome fasta files"
        },        
        "output_dir": {
          "type": "string",
          "format": "directory-path",
          "description": "Directory path to output files"
        },
        "recognise_marker_db": {
          "type": "string",
          "description": "Directory path to COG markers",
          "hidden": true,
          "default": "/vol/data/databases/clowm/CLDB-0190075fa6117f75add6ee173932d013/latest/recognise_marker_genes/"
        },
        "emapper_db": {
          "type": "string",
          "description": "Directory path to the eggNOG database",
          "hidden": true,
          "default": "/vol/data/databases/clowm/CLDB-018e846affa774508716ac5b5a20386e/latest/eggnog-mapper/5.0.2/"
        },
		"recombinase_scan_db": {
          "type": "string",
          "description": "Directory path to the recombinase hmm models",
          "hidden": true,
          "default": ""
        },
		"txsscan_db": {
          "type": "string",
          "description": "Directory path to the mcsyfinder TXSS models",
          "hidden": true,
          "default": ""
        },
		"gene_cluster_seqdb": {
          "type": "string",
          "description": "Directory path to the gene cluster reference sequences",
          "hidden": true,
          "default": ""
        }           
      },
      "required": ["output_dir", "input_dir", "recognise_marker_db", "emapper_db", "recombinase_scan_db", "txsscan_db", "gene_cluster_seqdb"]
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/required"
    }
  ]
}